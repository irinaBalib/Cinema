@model List<CINEMA.DB.UserBookings>   

@if (Model.Count == 0)
{
    <b>There are no bookings in your list!</b>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>Movie</th>
            <th>Time</th>
            <th>Tickets</th>
            <th></th>
        </tr>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.TimetableId.</td>
                <td>@book.Author</td>
                <td>@book.Year</td>
                <th><a asp-controller="Library" asp-action="ReturnBook" asp-route-title="@book.Title">Return</a></th>
            </tr>
        }
    </table>
}